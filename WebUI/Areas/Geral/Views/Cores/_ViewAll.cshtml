@model IEnumerable<Dominio.Geral.CoresDTO>


<section class="users-list-wrapper section">

    <div class="users-list-table">
        <div class="card">
            <div class="card-content card_sem_padd-4">
                <div class="col s12 m6 l8">
                    <h6 class="title">Series de Documentos</h6>
                </div>
            </div>
        </div>
        <div class="users-list-filter">
            <div class="card-panel">
                <div class="row">
                    <form>
                        <div class="input-field col s12 m3 s16">
                            <label for="icon_prefix3">Descricao</label>
                            <input id="icon_prefix3" type="text" class="validate">
                        </div>
                        <div class="col s12 m3 l16 display-flex align-items-center show-btn">
                            <a href="#" id="pesquisar" class="btn-small custom darken-4 mrgin waves-effect waves-light">
                                <i class="material-icons left">search</i>
                            </a>
                            <a onclick="showInPopup('@Url.Action("SaveCores","Cores",null,Context.Request.Scheme)')" class="modal-trigger btn-small mrgin indigo waves-effect waves-light"> Novo </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-content card_sem_padd">
                <!-- datatable start -->
                <div class="responsive-table">
                    <table id="users-list-datatable" class="table">
                        <thead class="tab-color-blue">
                            <tr>
                                <th>Descricao</th>
                                <th>Sigla</th>
                                <th>Accoes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                    <th>@Html.DisplayFor(modelItem => item.Sigla)</th>
                                    <td class="txt">
                                        <a onclick="showInPopup('@Url.Action("SaveCores","Cores",new {codigo=item.Codigo},Context.Request.Scheme)','Actualizar Cores')" class="btn-floating mb-1 btn-flat waves-effect waves-light green darken-1 white-text btn-small">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a class="btn-floating mb-1 btn-flat waves-effect waves-light cyan white-text btn-small">
                                            <i class="material-icons">arrow_downward</i>
                                        </a>
                                        <a class="btn-floating mb-1 btn-flat waves-effect waves-light blue white-text btn-small">
                                            <i class="material-icons">lock</i>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>