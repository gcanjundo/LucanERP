@model IEnumerable<Dominio.Geral.CoresDTO>

@{
    ViewData["Title"] = "Pesquisar";
}

<div class="row">
    <nav class="dropdownmenu navab">
        <div>
            <ul class="rights">
                <li><a href="#">POS</a></li>
                <li><a href="#">Oficina Auto</a></li>
                <li><a href="#">Serviço de Saude</a></li>
                <li><a href="#">Gestão Comercial</a></li>
                <li><a href="#">Stock & Inventario</a></li>
                <li><a href="#">Tesouraria</a></li>
                <li><a href="#">Recursos Humanos</a></li>
                <li><a href="#">Contabilidade</a></li>
                <li><a href="#">Imobilizado</a></li>
                <li class="bold active open"><a class="modal-trigger" href="#modal2">Configurações</a></li>

            </ul>
        </div>
    </nav>
    <div class="content-wrapper-before app_color"></div>
    <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
        <!-- Search for small screen-->
        <div class="container">
            <div class="row">
                <div class="col s12 m6 l6">
                    <h5 class="breadcrumbs-title"><span class="ups"></span></h5>
                </div>
                <div class="col s12 m6 l6 right-align-md">
                    <ol class="breadcrumbs mb-0 ups">
                        <li class="breadcrumb-item">
                            <a href="index.html">Início</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#"> Tabela de consulta</a>
                        </li>
                        <li class="breadcrumb-item active">
                            Series de Documentos
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="col s12">
        <div class="container">
            <!-- Full Calendar -->
            <section class="users-list-wrapper section">

                <div class="users-list-table">
                    <div class="card">
                        <div class="card-content card_sem_padd-4">
                            <div class="col s12 m6 l8">
                                <h6 class="title">Series de Documentos</h6>
                            </div>
                        </div>
                    </div>
                    <div class="users-list-filter">
                        <div class="card-panel">
                            <div class="row">
                                <form>
                                    <div class="input-field col s12 m3 s16">
                                        <label for="icon_prefix3">Descricao</label>
                                        <input id="icon_prefix3" type="text" class="validate">
                                    </div>
                                    <div class="col s12 m3 l16 display-flex align-items-center show-btn">
                                        <a href="#" id="pesquisar" class="btn-small custom darken-4 mrgin waves-effect waves-light">
                                            <i class="material-icons left">search</i>
                                        </a>
                                        <a id="btnNovo" href="#modalNovaCore" class="modal-trigger btn-small mrgin indigo waves-effect waves-light"> Novo </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-content card_sem_padd">
                            <!-- datatable start -->
                            <div class="responsive-table">
                                <table id="users-list-datatable" class="table">
                                    <thead class="tab-color-blue">
                                        <tr>
                                            <th>Numero</th>
                                            <th>Descricao</th>
                                            <th>Sigla</th>
                                            <th>Accoes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th> @Html.DisplayFor(modelItem => item.Codigo)</th>
                                                <th>@Html.DisplayFor(modelItem => item.Sigla)</th>
                                                <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                                                <td class="txt">
                                                    <a class="btn-floating mb-1 btn-flat waves-effect waves-light green darken-1 white-text btn-small">
                                                        <i class="material-icons">edit</i>
                                                    </a>
                                                    <a class="btn-floating mb-1 btn-flat waves-effect waves-light cyan white-text btn-small">
                                                        <i class="material-icons">arrow_downward</i>
                                                    </a>
                                                    <a class="btn-floating mb-1 btn-flat waves-effect waves-light blue white-text btn-small">
                                                        <i class="material-icons">lock</i>
                                                    </a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- Modal Structure -->
                            <div id="modalNovaCore" class="modal">
                                <div class="modal-content">
                                    <h4>Modal Header</h4>
                                    <p>A bunch of text</p>
                                </div>
                                <div class="modal-footer">
                                    <a href="#!" class="modal-close waves-effect waves-green btn-flat">Agree</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#btnNovo").on("click", function () {
            $('.modal').modal();
        });
    });
</script>